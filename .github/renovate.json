{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":disableDependencyDashboard",
    ":disablePeerDependencies",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    "workarounds:all",
    "helpers:pinGitHubActionDigestsToSemver",
    "docker:disable"
  ],
  "rangeStrategy": "bump",
  "includePaths": [
    "template-files/package.json/**",
    "template-files/.github/workflows/**"
  ],
  "commitMessageSuffix": "[skip ci]",
  "packageRules": [
    {
      "groupName": "github-actions",
      "matchManagers": ["github-actions"]
    },
    {
      "groupName": "npm-packages",
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "separateMajorMinor": true
    },
    {
      "description": "Disable package manager version updates",
      "matchPackageNames": ["pnpm"],
      "matchDepTypes": ["packageManager"],
      "enabled": false
    },
    {
      "description": "Enable dependency updates in custom template package.json files",
      "matchFileNames": [
        "template-files/package.json/*.package.json"
      ],
      "enabledManagers": ["json"],
      "json5Extractors": {
        "dependencies": [
          "$.dependencies.*"
        ],
        "devDependencies": [
          "$.devDependencies.*"
        ]
      }
    }
  ]
}
